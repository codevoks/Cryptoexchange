{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["DATABASE_URL", "JWT_SECRET", "SALT_ROUNDS", "REDIS_URL"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "env": [
        "DATABASE_URL",
        "JWT_SECRET",
        "SALT_ROUNDS",
        "NODE_ENV",
        "REDIS_URLs"
      ],
      "persistent": true
    },
    "db:migrate": {
      "env": ["DATABASE_URL"]
    }
  }
}
